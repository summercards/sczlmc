.game-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  justify-content: flex-start;
  padding: 20rpx;
  box-sizing: border-box;
}

.player-stats {
  display: flex;
  justify-content: space-around;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.middle-info {
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.battle-scene {
  position: relative;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}

.boss-hp-bar {
  width: 80%;
  height: 20rpx;
  background: #555;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.boss-hp-fill {
  height: 100%;
  background: #FF0000;
  border-radius: 10rpx;
  transition: width 0.5s ease-out;
}

.boss-hp-text {
  position: absolute;
  top: 0; 
  left: 50%;
  transform: translateX(-50%);
  font-size: 18rpx;
  color: #fff;
  line-height: 20rpx;
}

.boss-name {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.boss-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.hero-image {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  bottom: 0;
}

.battle-log {
  height: 200rpx;
  border: 1px solid #ccc;
  margin-bottom: 20rpx;
  padding: 10rpx;
  font-size: 24rpx;
  overflow: scroll;
}

.grid-area {
  width: 100%;
  height: 400rpx; 
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.grid {
  position: relative;
  width: 560rpx;
  height: 560rpx;
  background: #f0f0f0;
  overflow: hidden;
}

.grid-item {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  margin: 5rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  transition: top 0.5s ease-out, left 0.5s ease-out, transform 0.8s ease-out;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.grid-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #eeeeee; /* 白灰色 */
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
  text-align: center;
}

.overlay-item {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  margin: 5rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  transition: transform 0.8s ease-out; 
  z-index: 2;
}

.modal {
  position: fixed;
  top: 0; 
  left: 0; 
  right: 0; 
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.modal-content {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  text-align: center;
}
